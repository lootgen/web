{
   "compilerOptions": {
      "lib": ["ES2020"],
      "target": "ES2020",
      "module": "CommonJS",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "outDir": "dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "strictNullChecks": true
   },
   "include": [
      "src/**/*"
   ]
}
